<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>WhatsApp Business Onboarding</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        text-align: center;
        padding-top: 50px;
        background-color: #f5f5f5;
      }
      .btn {
        background-color: #25d366;
        color: white;
        border: none;
        padding: 15px 25px;
        font-size: 18px;
        border-radius: 8px;
        cursor: pointer;
      }
      .btn:hover {
        background-color: #1ebc59;
      }
    </style>
  </head>
  <body>
    <h1>WhatsApp Business Onboarding</h1>
    <p>Click the button below to start the embedded signup flow.</p>
    <button class="btn" onClick="startSignup()">
      Start WhatsApp Business Onboarding
    </button>
  </body>
  <script>
    const META_CLIENT_ID = "<%= process.env.META_CLIENT_ID %>";
    function startSignup() {
      const redirectUri = encodeURIComponent("https://localhost:8888/");
      const state = "testsignup2024";
      const scope = "whatsapp_business_management,business_management";
      const url = `https://www.facebook.com/dialog/oauth?client_id=${META_CLIENT_ID}&redirect_uri=${redirectUri}&state=${state}&scope=${scope}`;
      window.open(url, "_blank");
    }
  </script>
</html>
